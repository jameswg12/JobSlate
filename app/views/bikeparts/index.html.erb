<h1>Catalog of Bikeparts</h1>

<table class=center>
  <thead>
    <tr>
      <th>Name of product</th>
      <th>Description</th>
      <th>Image Link</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bikeparts.each do |bikepart| %>
      <tr>
        <td><%= bikepart.product_name %></td>
        <td><%= bikepart.description %></td>
        <td><%= bikepart.image_url %></td>
        <td><%= link_to 'Show', bikepart %></td>
        <td><%= link_to 'Edit', edit_bikepart_path(bikepart) %></td>
        <td><%= link_to 'Destroy', bikepart, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Bikepart', new_bikepart_path %>
